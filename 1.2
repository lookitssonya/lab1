#include <iostream>
#include <queue>
#include <string>
using namespace std;

// Структура для хранения информации о студенте
struct Student {
    string lastName; // Фамилия студента
    double averageGrade; // Средний балл студента
};

int main() {
    setlocale(LC_ALL, "Russian");
    queue<Student> studentQueue; // Создание очереди студентов

    // Добавление информации о новом студенте в очередь
    Student newStudent;
    cout << "Введите фамилию нового студента: ";
    cin >> newStudent.lastName;
    cout << "Введите средний балл нового студента: ";
    cin >> newStudent.averageGrade;

    studentQueue.push(newStudent); // Добавление студента в очередь

    // Просмотр данных очереди
    cout << "\nДанные студентов:\n";
    while (!studentQueue.empty()) {
        Student frontStudent = studentQueue.front(); // Получение первого студента в очереди
        cout << "Фамилия: " << frontStudent.lastName << endl;
        cout << "Средний балл: " << frontStudent.averageGrade << endl;
        studentQueue.pop(); // Удаление первого студента из очереди
    }
    return 0;
}

