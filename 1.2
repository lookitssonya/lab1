#include <iostream>
#include <queue>
#include <string>
using namespace std;
struct Student {
    string surname;
    double avg_grade;
};
void printQueue(queue<Student> q) {
    setlocale(LC_ALL, "Russian");
    while (!q.empty()) {
        cout << "Фамилия: " << q.front().surname << endl;
        cout << "Средний балл: " << q.front().avg_grade << endl;
        q.pop();
    }
}
int main() {
    queue<Student> studentQueue;
    char choice;

    do {
        Student newStudent;
        cout << "Введите фамилия студента: ";
        cin >> newStudent.surname;
        cout << "Введите средний балл студента: ";
        cin >> newStudent.avg_grade;
        studentQueue.push(newStudent);
        cout << "Добавить нового студента? (да/нет): ";
        cin >> choice;
    } while (choice == 'y');
    cout << "---- Студенты ----" << endl;
    printQueue(studentQueue);
    return 0;
}
